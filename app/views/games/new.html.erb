<h1>New Game</h1>
<ul>
<% @start_time = Time.now %>
<% @letters.each do |letter| %>
<li><%= letter %></li>
<% end %>
</ul>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value="<%= @letters %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <!-- <input type="hidden" name="end_time" value="<%= Time.now %>"> -->
  <input type="text" name="guess" class="textbox" placeholder="Your longest word">
  <input type="submit" value="Best Guess" class="btn">
</form>
